	</bind>

   <!-- @Thrown test -->
	<aspect class="org.jboss.test.aop.args.ThrownAspect" scope="PER_VM"/>

	<bind pointcut="execution(* org.jboss.test.aop.args.ThrownPOJO->method1(..))">
		<throwing name="throwing1" aspect="org.jboss.test.aop.args.ThrownAspect"/>
