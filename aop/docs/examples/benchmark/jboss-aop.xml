<?xml version="1.0" encoding="UTF-8"?>
<aop>
   <prepare expr="execution(* AdvisedPOJO->noop()) OR execution(AdvisedPOJO->new(..)) OR field(* AdvisedPOJO->*)"/>

   <bind pointcut="all(InterceptedPOJO)">
       <interceptor class="NoopInterceptor"/>
   </bind>

   <aspect class="Aspect" scope="PER_VM"/>

   <bind pointcut="all(AspectizedPOJO)">
       <advice name="intercept" aspect="Aspect"/>
   </bind>

   <pointcut name="calltwo" expr="call(* CalledPOJO->*(..)) AND !withincode(void Benchmark->call())" />
 
   <pointcut name="call" expr="call(* CalledPOJO->*(..)) AND withincode(void Benchmark->call())" />
 
   <bind pointcut="calltwo">
       <interceptor class="ChangeInterceptor"/>
   </bind>      

</aop>
